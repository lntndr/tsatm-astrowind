<style is:global>
  @font-face {
    font-family: 'Satoshi Variable';
    src: url('/assets/fonts/Satoshi-Variable.woff2') format('woff2'),
         url('/assets/fonts/Satoshi-Variable.woff') format('woff'),
         url('/assets/fonts/Satoshi-Variable.eot') format('embedded-opentype'),
         url('/assets/fonts/Satoshi-Variable.ttf') format('truetype');
    font-weight: 300 900;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Erode Variable';
    src: url('/assets/fonts/Erode-Variable.woff2') format('woff2'),
         url('/assets/fonts/Erode-Variable.woff') format('woff'),
         url('/assets/fonts/Erode-Variable.eot') format('embedded-opentype'),
         url('/assets/fonts/Erode-Variable.ttf') format('truetype');
    font-weight: 300 900;
    font-style: normal;
    font-display: swap;
  }
</style>

<style is:inline>
  :root {
    --aw-font-sans: 'Satoshi Variable';
    --aw-font-serif: 'Erode Variable';
    --aw-font-heading: 'Satoshi Variable';

    --aw-font-weight-normal: 450;
    --aw-font-weight-medium: 550;
    --aw-font-weight-semibold: 650;
    --aw-font-weight-bold: 750;

    --aw-color-primary: rgb(242, 48, 48);
    --aw-color-secondary: rgb(242, 99, 99);
    --aw-color-accent: rgb(249, 6, 6);

    --aw-color-text-heading: #fefefe;
    --aw-color-text-default: #0d0d0d;
    --aw-color-text-muted: #0d0d0da8;
    --aw-color-bg-page: hsl(54, 100%, 54%);

    --aw-color-bg-page-dark: rgb(27, 27, 27);
  }

  ::selection {
    background-color: lavender;
  }
  }

  .dark {

    --aw-color-primary: rgb(242, 48, 48);
    --aw-color-secondary: rgb(242, 99, 99);
    --aw-color-accent: rgb(249, 6, 6);

    --aw-color-text-heading: hsl(50, 19%, 92%);
    --aw-color-text-default: hsl(50, 19%, 82%);
    --aw-color-text-muted: hsl(50, 19%, 72%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>

