---
import '@fontsource-variable/space-grotesk';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Space Grotesk Variable';
    --aw-font-serif: 'Space Grotesk Variable';
    --aw-font-heading: 'Space Grotesk Variable';

    --aw-color-primary: rgb(242, 48, 48);
    --aw-color-secondary: rgb(242, 99, 99);
    --aw-color-accent: rgb(249, 6, 6);

    --aw-color-text-heading: #0d0d0d;
    --aw-color-text-default: #0d0d0d;
    --aw-color-text-muted: #0d0d0da8;
    --aw-color-bg-page: #d9d6c780;

    --aw-color-bg-page-dark: rgb(27, 27, 27);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Space Grotesk Variable';
    --aw-font-serif: 'Space Grotesk Variable';
    --aw-font-heading: 'Space Grotesk Variable';

    --aw-color-primary: rgb(242, 48, 48);
    --aw-color-secondary: rgb(242, 99, 99);
    --aw-color-accent: rgb(249, 6, 6);

    --aw-color-text-heading: hsl(50, 19%, 92%);
    --aw-color-text-default: hsl(50, 19%, 82%);
    --aw-color-text-muted: hsl(50, 19%, 72%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
