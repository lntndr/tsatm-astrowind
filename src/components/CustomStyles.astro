---
import '@fontsource-variable/alegreya';
import '@fontsource-variable/alegreya/wght-italic.css';
import '@fontsource-variable/outfit';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Outfit Variable';
    --aw-font-serif: 'Alegreya Variable';
    --aw-font-heading: 'Outfit Variable';

    --aw-font-weight-normal: 450;
    --aw-font-weight-medium: 550;
    --aw-font-weight-semibold: 650;
    --aw-font-weight-bold: 750;

    --aw-color-primary: hsl(358, 79%, 51%);
    --aw-color-secondary: rgb(242, 99, 99);
    --aw-color-accent: hsl(54, 100%, 54%);

    --aw-color-text-heading: #fefefe;
    --aw-color-text-default: #0d0d0d;
    --aw-color-text-muted: #0d0d0da8;
    --aw-color-bg-page: #fdfdfd;

    --aw-color-bg-page-dark: rgb(27, 27, 27);
  }

  ::selection {
    background-color: lavender;
  }

  .dark {

    --aw-color-primary: rgb(242, 48, 48);
    --aw-color-secondary: rgb(242, 99, 99);
    --aw-color-accent: rgb(249, 6, 6);

    --aw-color-text-heading: hsl(50, 19%, 92%);
    --aw-color-text-default: hsl(50, 19%, 82%);
    --aw-color-text-muted: hsl(50, 19%, 72%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  p {
    margin-bottom: 0.7rem !important;
  }

  /* Enable all ligatures including optional ones */
  :root {
    font-feature-settings: "liga" 1, "clig" 1, "dlig" 1, "hlig" 1, "calt" 1;
    font-variant-ligatures: common-ligatures discretionary-ligatures historical-ligatures contextual;
  }
  
  /* Apply to all text elements */
  *, *::before, *::after {
    font-feature-settings: inherit;
    font-variant-ligatures: inherit;
  }
  
  /* Specific typography classes */
  .font-sans, .font-serif, .font-heading {
    font-feature-settings: "liga" 1, "clig" 1, "dlig" 1, "hlig" 1, "calt" 1;
    font-variant-ligatures: common-ligatures discretionary-ligatures historical-ligatures contextual;
  }

  body, .no-copy, main, section, article, div, p, h1, h2, h3, h4, h5, h6, span, blockquote {
    user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
  }
  
</style>

